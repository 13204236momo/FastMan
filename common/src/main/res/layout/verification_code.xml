<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_code1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/verification_bg"/>
    <TextView
        android:id="@+id/tv_code2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toRightOf="@id/tv_code1"
        app:layout_constraintRight_toLeftOf="@id/tv_code3"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/verification_bg"/>
    <TextView
        android:id="@+id/tv_code3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toRightOf="@id/tv_code2"
        app:layout_constraintRight_toLeftOf="@id/tv_code4"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/verification_bg"/>
    <TextView
        android:id="@+id/tv_code4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/verification_bg"/>
    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:textColor="@android:color/transparent"/>
</androidx.constraintlayout.widget.ConstraintLayout>