<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:background="@drawable/to_left"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        android:layout_marginTop="100dp"
        android:text="输入验证码"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_back"
        android:text="已发送4位验证码至"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        android:layout_marginTop="28dp"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text2"
        app:layout_constraintLeft_toRightOf="@id/tv_text2"
        android:text="17611417293"
        android:textColor="@color/gray_light"/>

    <com.tianshang.common.widget.VerificationView
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_text2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="26dp"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/vv"
        app:layout_constraintRight_toRightOf="@id/vv"
        app:layout_constraintTop_toBottomOf="@id/vv"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg"
        android:text="确定"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sms"
        app:layout_constraintBottom_toBottomOf="@id/tv_sms"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/tv_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:text="重发短信验证码"
        android:textColor="@android:color/white"/>
    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sms"
        app:layout_constraintLeft_toLeftOf="@id/tv_sms"
        app:layout_constraintRight_toRightOf="@id/tv_sms"
        android:background="@color/gray_light"/>
    <TextView
        android:id="@+id/tv_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:text="使用语音验证码"
        android:textColor="@android:color/white"/>
    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_speech"
        app:layout_constraintLeft_toLeftOf="@id/tv_speech"
        app:layout_constraintRight_toRightOf="@id/tv_speech"
        android:background="@color/gray_light"/>
    <TextView
        android:id="@+id/tv_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:text="重新获取"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>